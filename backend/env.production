# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Database Configuration
PROD_DB_HOST=prod-db.enwhe.io
PROD_DB_PORT=5432
PROD_DB_NAME=conversationalcommerce_prod
PROD_DB_USER=prod_user
PROD_DB_PASSWORD=your-prod-db-password

# Redis Configuration
PROD_REDIS_HOST=prod-redis.enwhe.io
PROD_REDIS_PORT=6379
PROD_REDIS_PASSWORD=your-prod-redis-password

# Security Keys
PROD_SECRET_KEY=your-prod-secret-key
PROD_JWT_SECRET=your-prod-jwt-secret

# External Services
PROD_CLERK_SECRET_KEY=your-prod-clerk-secret
PROD_CLOUDINARY_URL=your-prod-cloudinary-url
PROD_TWILIO_ACCOUNT_SID=your-prod-twilio-sid
PROD_TWILIO_AUTH_TOKEN=your-prod-twilio-token

# Monitoring
PROD_SENTRY_DSN=your-prod-sentry-dsn

# Rate Limiting (Strict in production)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60